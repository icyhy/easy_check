.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.fixed-bottom-right {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 1000;
}

.add-button {
  width: 100rpx;
  height: 100rpx;
  background-color: #007bff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.3);
}

.add-button-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 顶部统计区域 */
.stats-section {
  padding: 40rpx 0 30rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.nav-right {
  display: flex;
  align-items: center;
}



.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-left: 20rpx;
}

.back-arrow-icon {
  width: 24px;
  height: 24px;
}



.content {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.input {
  border: 1px solid #eee;
  padding: 10px;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
  height: 40px; /* 增加输入框高度 */
}

.time-input-group {
  display: flex;
  align-items: center;
}

.time-input {
  flex: 1;
  margin-right: 10px;
}

.unit {
  font-size: 16px;
  color: #555;
}

.picker {
  border: 1px solid #eee;
  padding: 10px;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.icon-grid,
.color-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.icon-item {
  width: 50px;
  height: 50px;
  border: 2px solid transparent;
  border-radius: 5px;
}

.icon-item.selected {
  border-color: #007bff;
}

.color-item {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 2px solid transparent;
}

.color-item.selected {
  border-color: #007bff;
}