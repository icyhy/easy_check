/* Canvas测试页面样式 */
.canvas-test-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.status {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.canvas-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.test-canvas {
  width: 100%;
  height: 600rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.controls {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.control-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background-color: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.control-btn:active {
  background-color: #096dd9;
}

.debug-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.debug-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.debug-item {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.debug-item:last-child {
  border-bottom: none;
}