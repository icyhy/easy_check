/**
 * 打卡页面样式文件
 * 实现色块消除、图片展示和动画效果
 */

.checkin-page {
  min-height: 100vh;
  background-color: var(--background-color);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--primary-gradient);
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.2);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-lg);
  height: 88rpx;
}

.navbar-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
}

.navbar-date {
  font-size: var(--font-size-sm);
  opacity: 0.9;
}

/* 打卡容器 */
.checkin-container {
  padding: var(--spacing-base);
}

/* Canvas 打卡区域 */
.canvas-container {
  position: relative;
  width: 100%;
  height: 800rpx;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  margin-bottom: var(--spacing-lg);
  box-shadow: 0 8rpx 32rpx var(--shadow-color);
}

.checkin-canvas {
  width: 100%;
  height: 100%;
  display: block;
  /* Skyline 兼容：确保Canvas正确显示 */
  background-color: transparent;
}

/* Canvas 触摸反馈 */
.canvas-container.touching {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* Canvas 加载状态 */
.canvas-container.loading {
  background-color: #f5f5f5;
}

.canvas-container.loading::after {
  content: '加载中...';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #999;
  font-size: 28rpx;
}

/* Skyline 模式下的优化动画 */
.color-block.disappearing {
  animation: blockDisappear 0.3s ease forwards;
}

.color-block.completed {
  opacity: 0;
  transform: scale(0) !important;
  pointer-events: none;
}

.block-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.block-text {
  font-size: var(--font-size-sm);
  font-weight: bold;
  margin-bottom: 4rpx;
}

.block-score {
  font-size: var(--font-size-xs);
  opacity: 0.9;
}

/* 名言文字覆盖层 */
.quote-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.3),
    rgba(0, 0, 0, 0.1)
  );
  animation: fadeIn 1s ease-in;
}

.quote-content {
  text-align: center;
  color: white;
  padding: var(--spacing-lg);
  max-width: 80%;
}

.quote-text {
  display: block;
  font-size: var(--font-size-lg);
  font-weight: 500;
  line-height: 1.6;
  margin-bottom: var(--spacing-base);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

.quote-author {
  display: block;
  font-size: var(--font-size-base);
  opacity: 0.9;
  font-style: italic;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 打卡信息卡片 */
.checkin-info {
  margin-bottom: var(--spacing-lg);
}

.info-card {
  background-color: var(--surface-color);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.info-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.info-value {
  font-size: var(--font-size-xl);
  font-weight: bold;
  color: var(--text-primary);
}

.info-value.score {
  color: var(--primary-color);
}

/* 任务区域 */
.tasks-section {
  margin-bottom: var(--spacing-xl);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-base);
  padding: 0 var(--spacing-sm);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.section-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.tasks-list {
  background-color: var(--surface-color);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
}

.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-base); /* 减少padding，从lg改为base */
  border-bottom: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item.completed {
  opacity: 0.6;
  background-color: rgba(60, 197, 31, 0.05);
}

.task-info {
  flex: 1;
  margin-right: var(--spacing-base);
}

.task-header {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx; /* 减少间距 */
}

.task-name {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-primary);
  margin-right: var(--spacing-sm);
}

.task-description {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.3; /* 减少行高 */
}

.task-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.task-score {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  font-weight: bold;
  margin-bottom: 8rpx;
}

.task-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.task-check.checked {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  animation: bounce 0.6s ease;
}

.check-icon {
  font-size: var(--font-size-base);
  color: white;
  font-weight: bold;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.task-check.checked .check-icon {
  opacity: 1;
}

/* 完成提示模态框 */
.completion-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.completion-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background-color: var(--surface-color);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  margin: var(--spacing-lg);
  max-width: 600rpx;
  width: 90%;
  text-align: center;
  transform: scale(0.8);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.completion-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  margin-bottom: var(--spacing-lg);
}

.modal-title {
  font-size: var(--font-size-xxl);
  font-weight: bold;
  /* Skyline 不支持 -webkit-background-clip: text，使用纯色替代 */
  color: var(--primary-color);
}

.modal-body {
  margin-bottom: var(--spacing-xl);
}

.modal-text {
  display: block;
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin-bottom: var(--spacing-base);
  line-height: 1.6;
}

.modal-score {
  display: block;
  font-size: var(--font-size-xl);
  font-weight: bold;
  /* Skyline 不支持 -webkit-background-clip: text，使用纯色替代 */
  color: var(--accent-color);
}

.modal-actions {
  display: flex;
  /* 兼容性：Skyline 不支持 gap 属性，使用 margin 替代 */
  align-items: center;
}

.modal-actions .btn {
  flex: 1;
  margin-right: var(--spacing-base);
  /* 确保按钮在两种渲染模式下都有合适的最小高度 */
  min-height: 88rpx;
}

.modal-actions .btn:last-child {
  margin-right: 0;
}

/* 动画效果 */
@keyframes blockDisappear {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.1);
  }
  100% {
    opacity: 0;
    transform: scale(0.8);
  }
}

.color-block.disappearing {
  animation: blockDisappear 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

/* 兼容性增强样式 */
/* 确保在 Skyline 和 WebView 模式下都有良好的性能 */
.color-block {
  /* 强制硬件加速，提升动画性能 */
  will-change: transform, opacity;
}

.quote-image {
  /* 确保背景图片在两种渲染模式下都能正确显示 */
  background-attachment: scroll;
  /* 防止图片拉伸变形 */
  background-size: cover;
  background-position: center center;
}

/* 触摸优化 */
.color-block,
.task-check,
.btn {
  /* 增加触摸区域，提升用户体验 */
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
}

/* 渲染模式条件样式 */
/* Skyline 模式优化 */
.skyline-mode .color-block {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: center;
}

.skyline-mode .modal-content {
  backdrop-filter: none; /* Skyline 不支持 backdrop-filter */
  background: rgba(255, 255, 255, 0.95);
}

.skyline-mode .task-item {
  transition: background-color 0.15s ease;
}

/* WebView 模式优化 */
.webview-mode .color-block {
  transition: all 0.3s ease;
}

.webview-mode .modal-content {
  background: rgba(255, 255, 255, 0.9);
}

.webview-mode .task-item {
  transition: background-color 0.2s ease;
}

/* 动画性能优化 */
.skyline-mode .color-block.disappearing {
  animation-duration: 0.25s;
}

.webview-mode .color-block.disappearing {
  animation-duration: 0.4s;
}

/* 调试控制样式 */
.debug-controls {
  margin-top: 15px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 10px;
}

.debug-btn {
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
  font-size: 12px;
  min-width: 120px;
}

.debug-info {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  flex: 1;
  text-align: right;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .quote-background {
    height: 500rpx;
  }
  
  .info-card {
    padding: var(--spacing-base);
  }
  
  .task-item {
    padding: var(--spacing-base);
  }
}

@media (min-width: 414px) {
  .quote-background {
    height: 700rpx;
  }
}