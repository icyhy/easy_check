/**
 * 自律打卡小程序 - 全局样式文件
 * 定义统一的设计规范、颜色主题和基础样式
 */

/* 全局变量定义 */
page {
  /* 主色调 - 现代化渐变色彩 */
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --accent-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  --success-gradient: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  --warning-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  --danger-gradient: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  
  /* 基础颜色 */
  --primary-color: #667eea;        /* 主色调 */
  --secondary-color: #764ba2;      /* 辅助色 */
  --accent-color: #4facfe;         /* 强调色 */
  --background-color: #f8fafc;     /* 背景色 */
  --surface-color: #ffffff;        /* 表面色 */
  --text-primary: #2d3748;         /* 主要文字颜色 */
  --text-secondary: #4a5568;       /* 次要文字颜色 */
  --text-disabled: #a0aec0;        /* 禁用文字颜色 */
  --border-color: #e2e8f0;         /* 边框颜色 */
  --shadow-color: rgba(0, 0, 0, 0.08); /* 阴影颜色 */
  
  /* 任务难度颜色 */
  --easy-color: #48bb78;           /* 简单任务 - 绿色 */
  --easy-gradient: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  --medium-color: #4299e1;         /* 中等任务 - 蓝色 */
  --medium-gradient: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
  --hard-color: #f56565;           /* 困难任务 - 红色 */
  --hard-gradient: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
  
  /* 字体大小 */
  --font-size-xs: 24rpx;           /* 极小字体 */
  --font-size-sm: 28rpx;           /* 小字体 */
  --font-size-base: 32rpx;         /* 基础字体 */
  --font-size-lg: 36rpx;           /* 大字体 */
  --font-size-xl: 40rpx;           /* 超大字体 */
  --font-size-xxl: 48rpx;          /* 特大字体 */
  
  /* 间距 */
  --spacing-xs: 8rpx;              /* 极小间距 */
  --spacing-sm: 16rpx;             /* 小间距 */
  --spacing-base: 24rpx;           /* 基础间距 */
  --spacing-lg: 32rpx;             /* 大间距 */
  --spacing-xl: 48rpx;             /* 超大间距 */
  
  /* 圆角 */
  --border-radius-sm: 8rpx;        /* 小圆角 */
  --border-radius-base: 12rpx;     /* 基础圆角 */
  --border-radius-lg: 16rpx;       /* 大圆角 */
  --border-radius-xl: 24rpx;       /* 超大圆角 */
  
  /* 页面基础样式 */
  background-color: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: var(--font-size-base);
  line-height: 1.6;
  color: var(--text-primary);
}

/* 全局重置样式 - Skyline 不支持通配符选择器，使用具体选择器替代 */
view, text, button, input, textarea, image, scroll-view, swiper, swiper-item {
  box-sizing: border-box;
}

/* 页面基础样式已在上面的 page 选择器中定义 */

/* 通用容器样式 */
.container {
  padding: var(--spacing-base);
  min-height: 100vh;
}

.page-container {
  padding: var(--spacing-base);
  background-color: var(--background-color);
  min-height: 100vh;
}

.content-wrapper {
  background-color: var(--surface-color);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-base);
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

/* 文字样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-disabled {
  color: var(--text-disabled);
}

.text-xs {
  font-size: var(--font-size-xs);
}

.text-sm {
  font-size: var(--font-size-sm);
}

.text-base {
  font-size: var(--font-size-base);
}

.text-lg {
  font-size: var(--font-size-lg);
}

.text-xl {
  font-size: var(--font-size-xl);
}

.text-xxl {
  font-size: var(--font-size-xxl);
}

.text-bold {
  font-weight: bold;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius-base);
  font-size: var(--font-size-base);
  font-weight: 500;
  text-align: center;
  /* cursor: pointer; - Skyline 不支持，已移除 */
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: var(--primary-gradient);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

/* .btn-primary:active - Skyline 不支持 :active 伪类，已移除 */

/* .btn-primary:active::before - Skyline 不支持 :active 伪类，已移除 */

.btn-secondary {
  background: var(--surface-color);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

/* .btn-secondary:active - Skyline 不支持 :active 伪类，已移除 */

.btn-accent {
  background: var(--accent-gradient);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.3);
}

/* .btn-accent:active - Skyline 不支持 :active 伪类，已移除 */

.btn-small {
  padding: var(--spacing-xs) var(--spacing-base);
  font-size: var(--font-size-sm);
}

.btn-large {
  padding: var(--spacing-lg) var(--spacing-xl);
  font-size: var(--font-size-lg);
}

.btn-disabled {
  background-color: var(--border-color);
  color: var(--text-disabled);
  cursor: not-allowed;
}

/* .btn-disabled:active - Skyline 不支持 :active 伪类，已移除 */

/* 卡片样式 */
.card {
  background: var(--surface-color);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-base);
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gradient);
  opacity: 0;
  transition: opacity 0.3s ease;
}

/* .card:hover::before - 移动端不支持 hover 效果，已移除 */

/* .card:active::before - Skyline 不支持 :active 伪类，已移除 */

/* .card:active - Skyline 不支持 :active 伪类，已移除 */

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-base);
  padding-bottom: var(--spacing-base);
  border-bottom: 2rpx solid var(--border-color);
}

.card-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.card-content {
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 任务难度标签样式 */
.difficulty-tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: var(--font-size-xs);
  font-weight: 600;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.difficulty-easy {
  background: var(--easy-gradient);
}

.difficulty-medium {
