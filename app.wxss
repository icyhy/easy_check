  border-radius: 50%;
}

/* 透明度工具类 */
.opacity-75 {
  opacity: 0.75;
}

.opacity-90 {
  opacity: 0.9;
}

/* 变换工具类 */
.scale-95 {
  transform: scale(0.95);
}

.scale-105 {
  transform: scale(1.05);
}

.rotate-45 {
  transform: rotate(45deg);
}

.rotate-90 {
  transform: rotate(90deg);
}

/* 过渡效果工具类 */
.transition-all {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.transition-fast {
  transition: all 0.15s ease;
}

.transition-slow {
  transition: all 0.5s ease;
}

/* 响应式设计工具类 */
@media (max-width: 750rpx) {
  .mobile-hidden {
    display: none;
  }
  
  .mobile-visible {
    display: block;
  }
  
  .mobile-text-sm {
    font-size: var(--font-size-sm);
  }
  
  .mobile-p-sm {
    padding: var(--spacing-sm);
  }
}

@media (min-width: 751rpx) {
  .desktop-hidden {
    display: none;
  }
  
  .desktop-visible {
    display: block;
  }
}