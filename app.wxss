/* 阴影工具类 */
.shadow-sm {
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.shadow-md {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.shadow-xl {
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

/* 圆角工具类 */
.rounded-sm {
  border-radius: 4rpx;
}

.rounded-md {
  border-radius: 8rpx;
}

.rounded-lg {
  border-radius: 12rpx;
}

.rounded-xl {
  border-radius: 20rpx;
}

